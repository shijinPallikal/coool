

<script type="text/javascript">

    
    $(document).ready(function() {
        showTable();

    });
    
    function showTable()
    {
        var pageId="<?php echo $servicePageId; ?>";
        $.ajax({

            type:"POST",
            url:"<?php echo $this->basePath().'/admin/servicespagecontent/ajaxlist';?>",
            cache:false,
            data:{pageId:pageId,serId:'<?=$serviceId;?>'},
            dataType:"html",
            success:function(data)
            {
                //alert(data);
                $("#ajx_table").html(data);
                //showTable(srt);
            }
        });
    }
    //delete function
    $('.del').live('click',function()
    {
        var delid = $(this).attr('id'); 
        $.ajax({
            type:"POST",
            url:"/admin/menu/delete",
            cache:false,
            data:{ delid:delid },
            dataType:"html",
            success:function(data)
            {
                $("#msg").html(data);
                showTable();
            }
        });

    });

    //Status off
    $('.ston').live('click',function()
    {
        var offId = $(this).attr('id'); 
        $.ajax({
            type:"POST",
            url:"/admin/menu/status",
            cache:false,
            data:{ offId:offId },
            dataType:"html",
            success:function(data)
            {
                $("#msg").html(data);
                showTable();
            }
        });

    });

    //Status On
    $('.stof').live('click',function()
    {
        var onId = $(this).attr('id'); 
        $.ajax({
            type:"POST",
            url:"/admin/menu/status",
            cache:false,
            data:{ onId:onId },
            dataType:"html",
            success:function(data)
            {
                $("#msg").html(data);
                showTable();
            }
        });

    });


     function ajxUpdateDispOrder(idVar,disp_order)
     {   
        
        $('#ajx_result_'+idVar).html('<img src="../images/10.gif" width="25" height="25" style="padding-bottom:10px;" >');
         
        $.ajax({
            url: "/admin/menu/updateMenuOrder",
            type: "POST",
            cache: "false",
            data: 'id='+idVar+'&order='+disp_order,
            
            success: function(returnVal){                
                $('#ajx_result_'+idVar).html(returnVal);
                history.go(0);
            },
            error:function(){
 
            }   
        });
        
        //tTimeout('clear_span_msg();',3400);
    }   
    

